* {
	margin:0px;
	padding:0px;
}

body{
	background:#444444;	
	font:14px Trebuchet MS;
}

.wrapper{
	background:#ffffff;
	width:1000px;
	margin: 0 auto;
}

.header{
	width:100%;
	height:100px;
	background:#ffffff;
	text-align:center;
	border-bottom:15px solid#444444;
	border-top:15px solid#444444;
}

.content{
	width:100%;
	min-height: 100%;
}

.left{
	min-height: 100%;
	padding:10px;
	width:780px;
	float:left;
}

.left a{
	color:#000000;
	text-decoration: none;
}

.article{
	position:relative;
	width:760px;
	min-height:160px;
	padding:10px;
	margin-bottom:15px;
	
}

.article:hover{
	background:#eeeeee;
}

.article img{
	float:left;
	margin-right:10px;
	margin-bottom:0px;
	margin-top:20px;
}

.article p{
	text-indent:15px;
	padding-right:10px;
}

.video{
	padding-left:9px;
	padding-right:0px;
	padding-bottom:20px;
	background:#000000;
	margin:0 auto;
	height:410px;
	width:610px;
}

.video h1{
	text-align:center;
	color:#ffffff;
}

.right{
	width:200px;
	float:right;
}

.right_menu{
	padding-top:7px;
}

.right_menu a{
	display:block;
	text-align:center;
	margin:8px 0;
}

.bottom_menu{
	float:right;
}

.footer{
	width:100%;
	background:#000000;
	color:#ffffff;
	text-align:center;
}
.footer a{
	color: #ffffff;
	text-decoration: none;
}

#date{
margin-top:10px;
position:absolute;
bottom: 0px;
right:0px;
}